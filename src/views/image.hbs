<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{img.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{img.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{ img.description }}</p>
        <div class="text-center">
             <img src="/public/upload/{{img.filename}}" alt="" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{img.filename}}">
            <i class="fa fa-thumbs-up"></i> Like 
        </button>
        <p><span class="likes-count"> {{img.likes}} </span><i class="fas fa-heart"></i></p>
        <p><i class="fas fa-eye"></i> {{img.views}}</p>
        <p><i class="far fa-clock"></i> {{timeAgo img.timestamp}}</p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-success" id="btn-toggle-comment">
            Post a comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{img.uniqueId}}/comment" method="POST">
                <div class="form-group mb-3">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="form-group mb-3">
                    <input type="email" name="email" class="form-control" placeholder="Email" required>
                </div>
                <div class="form-group mb-3">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your comment" required></textarea>
                </div>
                <button class="btn btn-success" id="btn-comment">
                    <i class="fa fa-comment"></i> POST
                </button>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <a href="" class="col text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
                        </a>
                        <blockquote class="col">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}} - {{timeAgo timestamp}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>

</div>